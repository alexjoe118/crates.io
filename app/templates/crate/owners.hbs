{{ title 'Manage Crate Owners' }}

<div id='crates-heading'>
    {{svg-jar "gear"}}
    <h1>Manage Crate Owners</h1>
    <h2>{{ crate.name }}</h2>
</div>

<div id='me-email'>
    <h2>Add Owner</h2>

    <div class='form-group'>
        {{input type='text' value=username placeholder='Enter username' class='form-control' name='username'}}
        <button id='add-owner' class='small yellow-button' {{action 'addOwner'}}>Add</button>

        <div class='input-error'>
            {{#if error}}
                <div class='error'>
                    {{error}}
                </div>
            {{/if}}
        </div>

        <div class='input-success'>
            {{#if invited}}
                <div class='invited'>
                    {{invited}}
                </div>
            {{/if}}
        </div>
    </div>
</div>

<div class='owners white-rows'>
    {{#each crate.owner_user as |user|}}
        <div class='crate row'>
            <div>
              {{#link-to user.kind user.login}}
                  {{user-avatar user=user size='medium-small'}}
              {{/link-to}}
            </div>
            <div>
                {{#link-to user.kind user.login}}
                    {{ user.name }}
                {{/link-to}}
            </div>
            <div class='stats'>
                {{{ if user.email user.email "&nbsp;" }}}
            </div>
            <div class='stats downloads'>
                <button class='small yellow-button' {{action 'removeOwner' user}}>Remove</button>
            </div>
        </div>
    {{/each}}
</div>