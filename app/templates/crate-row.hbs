<div class='crate row'>
    <div class='desc'>
        <div class='info'>
            {{#link-to "crate" model}}{{ model.name }}{{/link-to}}
            <span class='vers small'>{{ model.max_version }}</span>
        </div>
        <div class='summary'>
            <span class='small'>
                {{ truncate-text model.description }}
            </span>
        </div>
    </div>
    <div class='stats'>
        <div class='downloads'>
            <img src="/assets/download.png"/>
            <span class='num'>{{ format-num model.downloads }}</span>
        </div>
    </div>
</div>
